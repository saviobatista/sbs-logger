# SBS Logger Environment Variables
# Copy this file to .env and modify the values as needed

# =============================================================================
# ULTRAFEEDER CONFIGURATION
# =============================================================================

# Timezone for Ultrafeeder
ULTRAFEEDER_TZ=America/Sao_Paulo

# ADS-B Receiver Configuration
# Format: IP_ADDRESS,PORT,PROTOCOL
ULTRAFEEDER_NET_CONNECTOR=192.168.0.100,30003,sbs_in

# Receiver Location (required for accurate positioning)
ULTRAFEEDER_LAT=-23.123
ULTRAFEEDER_LON=-47.123
ULTRAFEEDER_ALT=678m
ULTRAFEEDER_RX_LOCATION_ACCURACY=2

# Ultrafeeder Features
ULTRAFEEDER_STATS_RANGE=true
TAR1090_ENABLE=true
TAR1090_INTERACTIVE_TTL=3600
TAR1090_RANGE_OUTLINE_COLOR=green

# Ultrafeeder Web Interface Port
ULTRAFEEDER_PORT=2480

# =============================================================================
# SBS INGESTOR CONFIGURATION
# =============================================================================

# Timezone for Ingestor
INGESTOR_TZ=America/Sao_Paulo

# SBS Sources (comma-separated list)
# Format: IP:PORT,IP:PORT
SOURCES=192.168.0.100:30003

# NATS Configuration
NATS_URL=nats://nats:4222

# =============================================================================
# SBS LOGGER CONFIGURATION
# =============================================================================

# Timezone for Logger
LOGGER_TZ=America/Sao_Paulo

# Log Output Directory
OUTPUT_DIR=/app/logs

# =============================================================================
# SBS TRACKER CONFIGURATION
# =============================================================================

# Timezone for Tracker
TRACKER_TZ=UTC

# Database Configuration
DB_CONN_STR=postgres://sbs:sbs_password@timescaledb:5432/sbs_data?sslmode=disable

# Redis Configuration
REDIS_ADDR=redis:6379

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# TimescaleDB Configuration
POSTGRES_USER=sbs
POSTGRES_PASSWORD=sbs_password
POSTGRES_DB=sbs_data

# =============================================================================
# SECURITY (Optional - for production)
# =============================================================================

# Database SSL Mode (disable for development, require for production)
DB_SSL_MODE=disable

# NATS Authentication (optional)
# NATS_USER=
# NATS_PASSWORD=

# Redis Authentication (optional)
# REDIS_PASSWORD=